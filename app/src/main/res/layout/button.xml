<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/add_item_ip"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:hint="IP address"
        android:inputType="text" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/add_item_name"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/add_item_port"
        android:layout_alignParentStart="true"
        android:hint="Name"
        android:inputType="text" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/add_item_port"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/add_item_ip"
        android:layout_alignParentStart="true"
        android:hint="PORT"
        android:inputType="text" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/add_item_param"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:hint="Parameter"
        android:layout_below="@+id/add_item_name"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <Button
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/add_list_button"
        style="@style/Widget.AppCompat.Button"
        android:backgroundTint="@android:color/holo_green_dark"
        android:layout_below="@+id/add_item_param"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_list_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:id="@+id/list_view" />

</RelativeLayout>